<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context=".quiz_questions"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/DispName"
        android:layout_width="185dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="193dp"
        android:layout_marginLeft="193dp"
        android:layout_marginTop="11dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/accent_material_light" />

    <RadioGroup
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/answersgrp"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:layout_alignStart="@+id/DispName"
    android:layout_alignLeft="@+id/DispName">


    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="A"
        android:id="@+id/radioButton"
        android:checked="false"
        android:textStyle="bold"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="B"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:textStyle="bold"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="C"
        android:id="@+id/radioButton3"
        android:checked="false"
        android:textStyle="bold"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="D"
        android:id="@+id/radioButton4"
        android:checked="false"
        android:textStyle="bold"/>

</RadioGroup>

    <Button
        android:background="#FF5722"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:text="Next Question"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/answersgrp"/>

    <Button
        android:background="#01579B"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="Quit"
        android:id="@+id/buttonquit"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button3"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Questions"
        android:id="@+id/tvque"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/answersgrp"
        android:layout_marginBottom="52dp"/>

    <TextView
        android:layout_height="24dp"
        android:layout_width="wrap_content"
        android:textSize="19dp"
        android:textColor="#000000"
        android:text="Your Score"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:textAppearance="@color/abc_background_cache_hint_selector_material_dark"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="0"
        android:textAppearance="@color/abc_background_cache_hint_selector_material_dark"
        android:textColor="#000000"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="244dp"
        android:layout_marginRight="244dp" />

</RelativeLayout>